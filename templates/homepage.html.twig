<!DOCTYPE html>
<html>
<head>
    <title>Welcome to User Registration Symfony Application</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        .container {
            text-align: center;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            margin-bottom: 20px;
        }

        .button-container {
            display: flex;
            gap: 20px;
            margin-top: 20px;
        }

        .button {
            padding: 10px 20px;
            font-size: 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            background-color: #007bff;
            color: #ffffff;
            transition: background-color 0.2s;
        }

        .button:hover {
            background-color: #0056b3;
        }

        .language-toggle {
            position: absolute;
            top: 10px;
            right: 10px;
            z-index: 100;
            background-color: #007bff;
            color: #ffffff;
            padding: 5px 10px;
            border-radius: 4px;
            cursor: pointer;
        }

    </style>
</head>
<body>
<div class="container">
    <h1>Welcome to User Registration</h1>
    <div class="language-toggle" id="language-toggle" onclick="toggleLanguage()">Français</div>

    <div class="button-container">
        <button class="button" id="admin-button" onclick="window.location.href = '{{ path('app_admin') }}'">Admin Panel</button>
        <button class="button" id="user-button" onclick="window.location.href = '{{ path('app_user') }}'">Register User</button>
    </div>
</div>

<script>
    var languageToggle = document.getElementById('language-toggle');
    var adminButton = document.getElementById('admin-button');
    var userButton = document.getElementById('user-button');
    var isEnglish = true;

    var userPreferredLanguage = navigator.language.substring(0, 2);

    if (userPreferredLanguage === 'fr') {
        toggleLanguage();
    }

    function toggleLanguage() {
        var h1Element = document.querySelector('h1');
        if (isEnglish) {
            h1Element.innerHTML = 'Bienvenue à l\'inscription des utilisateurs';
            languageToggle.innerHTML = 'English';
            adminButton.innerHTML = 'Panneau d\'administration';
            userButton.innerHTML = 'Enregistrer l\'utilisateur';
        } else {
            h1Element.innerHTML = 'Welcome to User Registration';
            languageToggle.innerHTML = 'Français';
            adminButton.innerHTML = 'Admin Panel';
            userButton.innerHTML = 'Register User';
        }
        isEnglish = !isEnglish;
    }
</script>
</body>
</html>
